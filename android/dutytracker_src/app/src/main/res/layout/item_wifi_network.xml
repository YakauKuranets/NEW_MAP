<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#11141A"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#050505"
        android:padding="12dp">

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#00F0FF"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvSsid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNKNOWN_TARGET"
                android:textColor="#00F0FF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="monospace"/>
            <TextView
                android:id="@+id/tvBssid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00:00:00:00"
                android:textColor="#8D99AE"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">
            <TextView
                android:id="@+id/tvSignal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-60 dBm"
                android:textColor="#00FF41"
                android:textStyle="bold"
                android:fontFamily="monospace"/>
            <TextView
                android:id="@+id/tvSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WPA2-PSK"
                android:textColor="#FF003C"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
